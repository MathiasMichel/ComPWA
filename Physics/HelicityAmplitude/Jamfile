########### HelicityAmplitude lib #############
import os ;

local QFT = [ os.environ QFT ] ;
local GSL = [ os.environ GSL_ROOT ] ;
local CLIPS = [ os.environ CLIPS_ROOT ] ;

BOOSTLIBS = -lboost_log_setup -lboost_log -lboost_date_time -lboost_serialization -lboost_system -lboost_thread -lboost_test_exec_monitor -L$(BOOST_ROOT)/lib ;

project :
	requirements
        <include>$(QFT)/include
	    <include>$(BOOST_ROOT)/include
	    #<include>$(GSL)/include
	    <include>$(CLIPS)
	    <include>$(ROOT_INC_PATH)
	<linkflags>-L$(ROOT_LIB_PATH) 
	<linkflags>$(ROOTLIBS)
	#<linkflags>-L$(GSL)/lib
	#<linkflags>-lgsl
    #<linkflags>-lgslcblas
	<linkflags>-L$(CLIPS)/lib
    <linkflags>-lclips
	<linkflags>-L$(QFT)/lib
	<linkflags>-lqft++
	;

lib HelicityAmplitude : 
        [ glob *.cpp : ] 
        $(TOP)/Core//ComPWA
        $(TOP)/Physics/DynamicalDecayFunctions//DynamicalDecayFunctions
        $(TOP)/Physics/DecayTree//DecayTree
        ;

install dist : HelicityAmplitude : <location>$(TOP)/lib ;
